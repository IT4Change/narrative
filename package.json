{
  "name": "narrative-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "map-app",
    "narrative-app",
    "lib"
  ],
  "scripts": {
    "create-app": "node scripts/create-app.mjs",
    "dev": "npm run dev --workspace=narrative-app",
    "dev:map": "npm run dev --workspace=map-app",
    "build": "npm run build --workspace=lib && npm run build --workspace=narrative-app && npm run build --workspace=map-app",
    "build:lib": "npm run build --workspace=lib",
    "build:app": "npm run build --workspace=narrative-app",
    "build:map": "npm run build --workspace=map-app",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  }
}
